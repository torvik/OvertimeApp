<% if flash[:alert] %> 
  <%= js add_gritter(flash[:alert], title: "OverTime App Alert", sticky: false, time: 10000, image: :notice) %>
<% elsif flash[:error] %> 
  <%= js add_gritter(flash[:error], title: "OverTime App Error", sticky: false, time: 10000, image: :notice) %>
<% else  %> 
  <%= js add_gritter(flash[:notice], title: "OverTime App Notification", sticky: false, time: 10000, image: :notice) %>
<% end %>